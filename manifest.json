{
  "manifest_version": 3,
  "name": "Policy Radar",
  "version": "1.1",
  "description": "Scan privacy policies in-page and highlight important clauses for faster, privacy-aware browsing.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite"
  ],

  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Policy Radar"
  },
  "icons": {
    "48": "icons/icon-48.",
    "128": "icons/icon-128.svg"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
